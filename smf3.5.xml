<Module>
    <ModulePrefs title="super smash flash"/>
    <Content type="html">
        <![CDATA[
            <title>super smash flash</title>
            <script async src="https://www.googletagmanager.com/gtag/js?id=G-MENBM6GSNY"></script>
            <script>
                function gtag() {
                    dataLayer.push(arguments);
                }
                window.dataLayer = window.dataLayer || [];
                gtag("js", new Date);
                gtag("config", "G-MENBM6GSNY");
            </script>
            <script src="https://unpkg.com/@ruffle-rs/ruffle"></script>
            <script>
                window.RufflePlayer = window.RufflePlayer || {};
                window.RufflePlayer.config = {
                    "autoplay": "off",
                    "polyfills": true,
                    "letterbox": "on",
                    "backgroundColor": null,
                    "scale": "showAll",
                    "allowFullscreen": true,
                    "forceScale": true,
                    "forceAlign": true,
                    "splashScreen": true,
                    "wmode": "Window",
                    "unmuteOverlay": "hidden",
                    "quality": "high"
                };
                
                window.addEventListener("load", (event) => {
                    const ruffle = window.RufflePlayer.newest();
                    const player = ruffle.createPlayer();
                    const container = document.getElementById("container");
                    container.appendChild(player);
                    player.load("https://cdn.jsdelivr.net/gh/jamy132/jamy132@master/ssf3.0.swf");
                    player.style.width = "100%";
                    player.style.height = "100%";
                });
            </script>
            <div id="container"></div>
            <script src="https://cdn.jsdelivr.net/gh/st39/sdk@main/api.js"></script>
        ]]>
    </Content>
</Module>
